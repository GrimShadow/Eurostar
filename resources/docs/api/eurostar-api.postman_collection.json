      "name": "Authentication",
      "item": [
        {
          "name": "Generate API Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('api_token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"your-password\",\n  \"device_name\": \"Postman API Client\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sanctum/token",
              "host": ["{{base_url}}"],
              "path": ["api", "sanctum", "token"]
            }
          }
        }
      ]
